<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AdicionarAlunoServlet</servlet-name>
        <servlet-class>AdicionarAlunoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarSalas</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.GerenciarSalas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarUsuarios</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.GerenciarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logar</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.logar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sair</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.Sair</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarDisciplinas</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.GerenciarDisciplinas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>aula2</servlet-name>
        <servlet-class>br.edu.ifrn.servletAula.aula2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarUsuario</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.cadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listarUsuario</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.listarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>teste</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.teste</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FazendoTesteServlet</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.FazendoTesteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarUsuario</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.buscarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GerenciarMateriais</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.GerenciarMateriais</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrarMaterial</servlet-name>
        <servlet-class>br.edu.ifrn.jdbc.servlets.cadastrarMaterial</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdicionarAlunoServlet</servlet-name>
        <url-pattern>/AdicionarAlunoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarSalas</servlet-name>
        <url-pattern>/GerenciarSalas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarUsuarios</servlet-name>
        <url-pattern>/GerenciarUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logar</servlet-name>
        <url-pattern>/logar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sair</servlet-name>
        <url-pattern>/Sair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarDisciplinas</servlet-name>
        <url-pattern>/GerenciarDisciplinas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aula2</servlet-name>
        <url-pattern>/aula2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarUsuario</servlet-name>
        <url-pattern>/cadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listarUsuario</servlet-name>
        <url-pattern>/listarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>teste</servlet-name>
        <url-pattern>/teste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FazendoTesteServlet</servlet-name>
        <url-pattern>/FazendoTesteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarUsuario</servlet-name>
        <url-pattern>/buscarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GerenciarMateriais</servlet-name>
        <url-pattern>/GerenciarMateriais</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrarMaterial</servlet-name>
        <url-pattern>/cadastrarMaterial</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-nested.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-nested.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/struts-tiles.tld</taglib-uri>
            <taglib-location>/WEB-INF/struts-tiles.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>
